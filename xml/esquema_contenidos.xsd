<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pagina SYSTEM [
  <!ENTITY bi SYSTEM "&lt;b&gt;">
  <!ENTITY bo SYSTEM "&lt;/b&gt;">
  <!ENTITY ui SYSTEM "&lt;u&gt;">
  <!ENTITY uo SYSTEM "&lt;/u&gt;">
  <!ENTITY ii SYSTEM "&lt;i&gt;">
  <!ENTITY io SYSTEM "&lt;/i&gt;">
]> <!-- #region DOCTYPE -->

<!-- #endregion -->
<xs:schema  xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:nskimi="http://html.kimikaze.myds.me/xml/"
            nskimi:schemaLocation="http://html.kimikaze.myds.me/xml"
            elementFormDefault="qualified" version="1.0">
  <!-- #region esquema de contenido -->
  <xs:element name="pagina">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="propiedades" minOccurs="1" maxOccurs="1"/>
        <xs:element ref="seccion"     minOccurs="1" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element> 
  <!-- #endregion-->
  <!-- #region Propiedades-->
    <xs:element name="propiedades">
    <xs:complexType>
      <xs:simpleContent >
        <xs:extension base="xs:string">
          <xs:attribute name="subtitulo" type="xs:string" use="required"/>
          <xs:attribute name="numero" type="xs:unsignedByte" use="required"/>
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>
  <!-- #endregion-->
  <!-- #Bloques principales-->
  <xs:element name="seccion">
    <xs:complexType>
      <xs:choice>
        <xs:element ref="ilustracion"  minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="bloque_texto" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="tablon"       minOccurs="0" maxOccurs="unbounded"/>
      </xs:choice>
    </xs:complexType>
  </xs:element>
  <!-- #endregion-->
  <!-- #Objeto Ilustración -->
  <xs:element name="ilustracion">
    <xs:complexType>    
      <xs:simpleContent>
          <xs:extension base="xs:string">
            <xs:attribute name="ruta"         type="xs:anyURI" use="required"/>
            <xs:attribute name="Alto"         type="xs:short"  use="required"/>
            <xs:attribute name="Ancho"        type="xs:short"  use="required"/>
            <xs:attribute name="alt"          type="xs:string" use="optional"/>
          </xs:extension>
        </xs:simpleContent>
      </xs:complexType>
   </xs:element>
  <!-- #endregion-->
  <!-- #Objeto Ilustración -->
  <xs:element name="video">
    <xs:complexType>    
      <xs:simpleContent>
          <xs:extension base="xs:anyURI">
            <xs:attribute name="Descripcion"  type="xs:string" use="optional"/>
            <xs:attribute name="Alto"         type="xs:short"  use="required"/>
            <xs:attribute name="Ancho"        type="xs:short"  use="required"/>
          </xs:extension>
        </xs:simpleContent>
      </xs:complexType>
   </xs:element>
  <!-- #endregion-->
  <!-- #Instrumentos -->
   <xs:element name="bloque_texto">
    <xs:complexType>
      <xs:choice>
        <xs:element name="titulo_apartado"  type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="pt" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="boton_enlace" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="lista"        minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="tabla"        minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="ilustracion"  minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="video"        minOccurs="0" maxOccurs="unbounded"/>
      </xs:choice>
    </xs:complexType>
  </xs:element>
  <!-- #Tablon-->
  <!-- #Instrumentos -->
  <xs:element name="tablon">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="bloque_texto"  minOccurs="1" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
   <!-- #endregion-->
  <!-- #Boton (Enlace) -->
  <xs:element name="boton_enlace">
    <xs:complexType>    
      <xs:simpleContent>
          <xs:extension base="xs:anyURI">
            <xs:attribute name="Descripcion" type="xs:string"  use="required"/>
          </xs:extension>
        </xs:simpleContent>
      </xs:complexType>
   </xs:element>
  <!-- #endregion-->
  <!-- #Lista -->
    <xs:element name="lista">
      <xs:complexType>    
        <xs:sequence>
              <xs:element name="apartado" type="xs:string" minOccurs="1" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
     </xs:element>
    <!-- #endregion-->
    <!-- #Tabla -->
    <xs:element name="tabla">
      <xs:complexType>    
        <xs:sequence>
              <xs:element ref="tupla" minOccurs="1" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
     </xs:element>
    <!-- #endregion-->
    <!-- #Boton (Enlace) -->
  <xs:element name="tupla">
    <xs:complexType>    
      <xs:simpleContent>
          <xs:extension base="xs:anyURI">
            <xs:attribute name="Titulo"       type="xs:string"  use="required"/>
            <xs:attribute name="Descripcion"  type="xs:string"  use="optional"/>
            <xs:attribute name="Imagen_tabla" type="xs:anyURI"  use="required"/>
          </xs:extension>
        </xs:simpleContent>
      </xs:complexType>
   </xs:element>
  <!-- #endregion-->
</xs:schema>